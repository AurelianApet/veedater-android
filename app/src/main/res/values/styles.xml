<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:colorControlNormal">@color/ed_line</item>
        <item name="android:colorControlActivated">@color/ed_line</item>
        <item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>
    </style>
    <style name="AppTheme1" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/ed_line</item>
        <item name="android:colorControlActivated">@color/ed_line</item>
        <item name="android:windowFullscreen">true</item>
        <item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="AppTheme3" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pink</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/ed_line</item>
        <item name="android:colorControlActivated">@color/ed_line</item>
        <item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>
    </style>
    <style name="SeekBarWithoutSteps" parent="Base.Widget.AppCompat.SeekBar.Discrete">
        <item name="android:button">@color/pink</item>
    </style>
    <style name="tallerBarStyle" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">5dp</item>
        <item name="android:maxHeight">5dp</item>
    </style>
    <style name="fingure" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#263237</item>
        <item name="colorPrimaryDark">#1e282d</item>
        <item name="colorAccent">#1e282d</item>
        <item name="android:textColorPrimary">#f5f5f5</item>
        <item name="android:textColorSecondary">#95aab4</item>

    </style>
    <style name="AppTheme2" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/ed_line</item>
        <item name="android:colorControlActivated">@color/ed_line</item>
        <item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <style name="DialogAnimation_2">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <style name="ActionSheetStyleiOS7">
        <item name="actionSheetBackground">@android:color/transparent</item>
        <item name="cancelButtonBackground">@drawable/slt_as_ios7_cancel_bt</item>
        <item name="otherButtonTopBackground">@drawable/slt_as_ios7_other_bt_top</item>
        <item name="otherButtonMiddleBackground">@drawable/slt_as_ios7_other_bt_middle</item>
        <item name="otherButtonBottomBackground">@drawable/slt_as_ios7_other_bt_bottom</item>
        <item name="otherButtonSingleBackground">@drawable/slt_as_ios7_other_bt_single</item>
        <item name="cancelButtonTextColor">#EF1D78</item>
        <item name="otherButtonTextColor">#EF1D78</item>
        <item name="actionSheetPadding">10dp</item>
        <item name="otherButtonSpacing">0dp</item>
        <item name="cancelButtonMarginTop">10dp</item>
        <item name="actionSheetTextSize">14sp</item>
        <item name="android:typeface">normal</item>
    </style>
</resources>
