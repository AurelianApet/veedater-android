<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="digimantra.veedaters.Dashboard.Fragment.Settings">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <digimantra.veedaters.CustomViews.TextReguler
        android:id="@+id/favorites"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:textColor="@color/black"
        android:text="Favorites"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@mipmap/gray_arrow"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#7B7B7B"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <digimantra.veedaters.CustomViews.TextReguler
        android:id="@+id/blockList"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:textColor="@color/black"
        android:text="Blocked User"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="16sp"/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/gray_arrow"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            />
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#7B7B7B"
       />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <digimantra.veedaters.CustomViews.TextReguler
        android:id="@+id/preference"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:textColor="@color/black"
        android:text="Preferences"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:textSize="16sp"/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/gray_arrow"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#7B7B7B"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <digimantra.veedaters.CustomViews.TextReguler
        android:id="@+id/changePassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:textColor="@color/black"
        android:text="Change Password"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="16sp"/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/gray_arrow"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#7B7B7B"/>
    <RelativeLayout android:id="@+id/manageAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <digimantra.veedaters.CustomViews.TextReguler
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:textColor="@color/black"
            android:text="Manage Account"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/gray_arrow"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#7B7B7B"/>
</LinearLayout>
