        <digimantra.veedaters.CustomViews.TextReguler
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <digimantra.veedaters.CustomViews.TextReguler
                android:id="@+id/ageMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:visibility="invisible"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                />
            <digimantra.veedaters.CustomViews.TextReguler
                android:id="@+id/ageMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textColor="@color/black"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                />
        </RelativeLayout>
        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
            android:id="@+id/ageSeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:corner_radius="10"
            app:min_value="0"
            app:max_value="50"
            app:bar_color="#e0e1e7"
            app:bar_highlight_color="@color/pink"
            app:left_thumb_color_pressed="@color/pink"
            app:left_thumb_image="@drawable/color_circle"
            app:right_thumb_image="@drawable/color_circle"
            app:right_thumb_color_pressed="@color/pink"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:data_type="_integer"/>

