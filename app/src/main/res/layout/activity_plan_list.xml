<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_plan_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="digimantra.veedaters.Dashboard.PlanListActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/toplayer"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetEnd="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageView android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cross_button"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"
                />
            <digimantra.veedaters.CustomViews.TextArialBold
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="Choose Payment Plans"
                android:layout_marginTop="38dp"
                android:layout_centerHorizontal="true"
               />
            <digimantra.veedaters.CustomViews.TextArialBold
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="Edit"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
            <ImageView android:id="@+id/threeDot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/new_three_dot"
                android:layout_marginLeft="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <View android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_height="8dp"
        android:background="@drawable/tooshdow"
        ></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
    <ImageView android:id="@+id/bestOfferImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/bestbuy"
        android:layout_centerVertical="true"/>
        <digimantra.veedaters.CustomViews.TextReguler
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best package"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/bestOfferImage"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"/>
        <digimantra.veedaters.CustomViews.TextViewSemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/pink"
            android:text="$89.99"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EBEBF1">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/planList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</LinearLayout>
